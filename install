

venvCreate ()
{
    virtualenv --clear -p python2 --system-site-packages .venv
}

venvActivate ()
{
    . .venv/bin/activate
}

absPath() {

    readlink -f "$@"
}

makeLink() {

    ln -svf "$(absPath .venv)/bin/$1" "$2"
}

#####################################################################################
## main

venvCreate

venvActivate

pip install .

echo

makeLink _pidginCompleteBuddy ~/bin/

makeLink pidginMsg ~/bin/
makeLink pidginMsg ./run

